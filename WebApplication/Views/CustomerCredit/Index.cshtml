@model AddMoneyCreditModel


@{
    ViewData["Title"] = "Nạp tiền vào tài khoản";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Nạp tiền vào tài khoản</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">
                    <div class="form-group mb-3">
                        <input type="hidden" class="form-control" asp-for="CustomerId" value="@ViewBag.id">
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Money"></label>
                        <input class="form-control" asp-for="Money">
                        <span class="form-control-feedback text-danger" asp-validation-for="Money"></span>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-danger btn-block btn-rounded">
                                Submit
                            </button>
                        </div>
                        <div class="col-6">
                            <a href="/" type="button" class="btn btn-danger btn-block btn-rounded">
                                Thoát
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>