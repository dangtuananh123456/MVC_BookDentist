@model EditMedicalRecordModel

@{
    ViewData["Title"] = "Sửa hồ sơ bệnh nhân";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sửa hồ sơ bệnh nhân</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">

                    <input type="hidden" class="form-control" asp-for="Id">
                    <input type="hidden" class="form-control" asp-for="SequenceNumber">

                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="ExaminationDate"></label>
                        <input class="form-control" asp-for="ExaminationDate">
                        <span class="form-control-feedback text-danger" asp-validation-for="ExaminationDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Service"></label>
                        <div class="dropdown bootstrap-select form-control">
                            <select asp-for="Service" asp-items="@ViewBag.service"
                                    class="selectpicker form-control"
                                    data-style="btn-outline-primary"
                                    data-size="5" tabindex="-98">
                            </select>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="ServicePrice"></label>
                        <input class="form-control" asp-for="ServicePrice">
                        <span class="form-control-feedback text-danger" asp-validation-for="ServicePrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerId"></label>
                        <div class="dropdown bootstrap-select form-control">
                            <select asp-for="CustomerId" asp-items="@ViewBag.customer"
                                    class="selectpicker form-control"
                                    data-style="btn-outline-primary"
                                    data-size="5" tabindex="-98">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedByDentistId"></label>
                        <div class="dropdown bootstrap-select form-control">
                            <select asp-for="CreatedByDentistId" asp-items="@ViewBag.dentistCreate"
                                    class="selectpicker form-control"
                                    data-style="btn-outline-primary"
                                    data-size="5" tabindex="-98">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExamDentistId"></label>
                        <div class="dropdown bootstrap-select form-control">
                            <select asp-for="ExamDentistId" asp-items="@ViewBag.dentistExam"
                                    class="selectpicker form-control"
                                    data-style="btn-outline-primary"
                                    data-size="5" tabindex="-98">
                            </select>
                        </div>
                    </div>
                    <input name="oldDentistId" type="hidden" value="@Model.ExamDentistId"/>
                    <div class="row mb-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Lưu thay đổi
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="MedicalRecord" asp-action="Index" asp-route-dentistId="@Model.ExamDentistId" type="button" class="btn btn-danger btn-block btn-rounded">
                                Thoát
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>