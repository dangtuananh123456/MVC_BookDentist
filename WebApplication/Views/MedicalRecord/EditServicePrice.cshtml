@model EditServicePriceModel


@{
    ViewData["Title"] = "Thay đổi dịch vụ";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sửa thông tin thuốc</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Id"></label>
                        <input class="form-control" asp-for="Id" value="@ViewBag.id">
                        <span class="form-control-feedback text-danger" asp-validation-for="Id"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Sequence"></label>
                        <input class="form-control" asp-for="Sequence" value = "@ViewBag.sequence">
                        <span class="form-control-feedback text-danger" asp-validation-for="Sequence"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Price"></label>
                        <select asp-for="Price" asp-items="@ViewBag.selection">
                        </select>
                        <span class="form-control-feedback text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-warning btn-block btn-rounded">
                                Lưu thay đổi
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Medicine" asp-action="Index" type="button" class="btn btn-danger btn-block btn-rounded">
                                Thoát
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>