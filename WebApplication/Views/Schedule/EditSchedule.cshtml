@model ScheduleModel

@{
    ViewData["Title"] = "Sửa lịch hẹn";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sửa lịch hẹn</h4>
                <form method="post" asp-action="EditSchedule">
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Date"></label>
                        <input class="form-control" asp-for="Date">
                        <span class="form-control-feedback text-danger" asp-validation-for="Date"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="StartTime"></label>
                        <input class="form-control" asp-for="StartTime">
                        <span class="form-control-feedback text-danger" asp-validation-for="StartTime"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="EndTime"></label>
                        <input class="form-control" asp-for="EndTime">
                        <span class="form-control-feedback text-danger" asp-validation-for="EndTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DentistId"></label>
                        <div class="dropdown bootstrap-select form-control">
                            <select asp-for="DentistId" asp-items="@(ViewData["DentistList"] as List<SelectListItem>)"
                                    class="selectpicker form-control"
                                    data-style="btn-outline-primary"
                                    data-size="5" tabindex="-98">
                            </select>
                        </div>
                    </div>
                    <input class="form-control" type="hidden" name="oldStartTimeStr" value="@(ViewData["OldStartTime"] as string)">
                    <input class="form-control" type="hidden" name="oldDentistId" value="@(ViewData["OldDentistId"] as string)">
                    <div class="row mb-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Lưu thay đổi
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Schedule" asp-action="GetCustomerSchedules" asp-route-customerId="@(ViewData["CustomerId"] as string)" type="button" class="btn btn-danger btn-block btn-rounded">
                                Thoát
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

