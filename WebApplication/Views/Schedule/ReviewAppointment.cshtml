@model CreateAppointmentModel

@{
    ViewData["Title"] = "Review lịch hẹn";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Review lịch hẹn</h4>
                <form method="post" asp-action="MakeAppointment">
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Date"></label>
                        <input readonly class="form-control" asp-for="Date">
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="StartTime"></label>
                        <input readonly class="form-control" asp-for="StartTime">
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="EndTime"></label>
                        <input readonly class="form-control" asp-for="EndTime">
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label">Nha sĩ khám</label>
                        <input readonly class="form-control" value="@ViewData["DentistName"]">
                    </div>
                    <div class="form-group mb-3">
                        <input type="hidden" class="form-control" asp-for="DentistId" />
                    </div>
                    <input class="form-control" type="hidden" asp-for="CustomerId">
                    <div class="row mb-3">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Xác nhận đặt lịch
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-action="MakeAppointment" asp-route-customerId="@Model.CustomerId" type="button" class="btn btn-danger btn-block btn-rounded">
                                Trở lại trang trước
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>    

