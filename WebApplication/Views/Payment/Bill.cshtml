@model BillModel
@{
    ViewData["title"] = "Hoa don";
}

<div class="table-responsive">
	<h3>Hóa đơn thanh toán</h3>
	<div><b>Tên dịch vụ: </b>@Model.NameService</div>
	<div><b>GIá dịch vụ: </b>@Model.SerVicePrice</div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">Tên Thuốc</th>
				<th scope="col">Giá mỗi viên</th>
				<th scope="col">Số lượng</th>
			</tr>
		</thead>
		<tbody>
			@if(Model.medicines != null)
			{
				@foreach (var item in Model.medicines)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.Price</td>
						<td>@item.Quantity</td>
					</tr>
				}
			}
		</tbody>
	</table>
	<h5><b>Total : </b>@Model.Total</h5>
	@if(Model.Status == "yes")
	{
		<h5><b>Đã thanh toán</b></h5>
		<a class="btn btn-warning" asp-action="Index" asp-controller="Payment">Back</a>
	}
	else
	{
		@if(Model.statuspayment == "yes")
		{
			<h5><b>Tài khoản quý khách không đủ</b></h5>	
		}
		<a href ="/Payment/Transfer?customerid=@Model.CustomerId&total=@Model.Total&id=@Model.IdMedicalRecord&sequence=@Model.Sequence" class ="btn btn-success">Thanh toán</a>
	}
</div>

